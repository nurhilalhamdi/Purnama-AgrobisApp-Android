<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="org.d3ifcool.testing.MedisKu.TentangMedisFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBarTentangMedis"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="?homeAsUpIndicator"
                app:title="Kandang Pribadi"
                app:titleTextColor="#262626" />



    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_medis"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp">

            <View
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_accept"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/maisonbold"
                android:text="Deskripsi Penyakit"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#262626"
                android:textSize="15sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_deskripsi_medis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#262626"
            android:lineSpacingExtra="10dp"
            android:fontFamily="@font/maisonneuebook"
            android:text="@string/hello_blank_fragment" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <View
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_accept"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/maisonbold"
                android:text="Gejala Penyakit"
                android:textColor="#262626"
                android:textSize="15sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_gejala_medis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#262626"
            android:lineSpacingExtra="10dp"
            android:fontFamily="@font/maisonneuebook"
            android:text="@string/hello_blank_fragment" />
    </LinearLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>