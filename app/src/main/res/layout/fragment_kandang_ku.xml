                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        android:src="@drawable/ic_tambahkandang"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tambahkan kandang\nuntuk di kelola"
                            android:fontFamily="@font/maison"
                            android:layout_marginLeft="16dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:textColor="#262626"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_lokasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_accept"
                                android:text="Parepare"
                                android:fontFamily="@font/maisonneuebook"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="16dp"
                                android:textSize="12sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:gravity="center_vertical"
                                android:drawableStart="@drawable/ic_baseline_location_on_24"
                                android:textColor="#fff"
                                android:drawableLeft="@drawable/ic_baseline_location_on_24" />

                            <TextView
                                android:id="@+id/txt_kandang_aktif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Kandang aktif"
                                android:background="@drawable/bg_accept"
                                android:fontFamily="@font/maisonneuebook"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="16dp"
                                android:textSize="12sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:gravity="center_vertical"
                                android:drawableStart="@drawable/ic_baseline_home_24"
                                android:textColor="#fff"
                                android:drawableLeft="@drawable/ic_baseline_home_24" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_id_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:gravity="center_horizontal"
                    android:text="Id â€¢ 12"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textColor="#262626" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/menuKandangPribadi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:src="@drawable/ic_cagepersonal"
                                android:id="@+id/iconKandangPribadi"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah Kandang"
                                    android:textSize="16sp"
                                    android:textColor="#262626"
                                    android:fontFamily="@font/maisonbold"
                                    android:gravity="center_vertical"
                                    />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tambahkan dan kelola kandang yang ditugaskan"
                                        android:textSize="12sp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/maisonneuebook"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/menuKandangMitra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:src="@drawable/ic_cagecompany"
                                android:id="@+id/iconKandangMitra"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kandang Mitra"
                                    android:textSize="16sp"
                                    android:textColor="#262626"
                                    android:fontFamily="@font/maisonbold"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tambahkan dan kelola kandang mitra kerjasama anda"
                                    android:textSize="12sp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/maisonneuebook"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBarId"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:titleTextColor="@color/white"
                app:layout_collapseMode="pin"
                app:navigationIcon="?homeAsUpIndicator"
                >
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical">

                    <SearchView
